<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".deteksiwarna.CapActivity">

    <ImageView
        android:id="@+id/img_src"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/open_cam"
        tools:layout_editor_absoluteX="-29dp" />

    <Button
        android:id="@+id/open_cam"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Open Cam"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view_color"
        android:layout_width="263dp"
        android:layout_height="52dp"
        app:layout_constraintBottom_toBottomOf="@+id/nama_warna"
        app:layout_constraintEnd_toEndOf="@+id/nama_warna"
        app:layout_constraintStart_toStartOf="@+id/nama_warna"
        app:layout_constraintTop_toTopOf="@+id/nama_warna" />

    <TextView
        android:id="@+id/nama_warna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="ketuk foto untuk dek warna"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_src" />

</androidx.constraintlayout.widget.ConstraintLayout>